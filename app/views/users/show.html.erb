<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <span><%= link_to "View my profile", @user %></span><br>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <div class="pagination justify-content-center">
        <%= will_paginate @microposts, class: "pagination justify-content-center" %>
      </div>
    <% else %>
      <p>This user has no microposts yet.</p>
    <% end %>
  </div>
</div>
